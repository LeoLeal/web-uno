{
  "name": "web-uno",
  "version": "1.0.0",
  "description": "Serverless P2P Uno Game",
  "scripts": {
    "dev": "concurrently -n \"VITE,SIGNAL\" -c \"cyan,magenta\" \"npm run dev:web -- --host\" \"npm run dev:signaling\"",
    "dev:web": "vite",
    "dev:signaling": "tsx scripts/signaling.ts",
    "signaling": "tsx scripts/signaling.ts",
    "build": "vite build",
    "start": "vite preview",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^2.2.0",
    "uuid": "^9.0.1",
    "ws": "^8.19.0",
    "y-webrtc": "^10.3.0",
    "yjs": "^13.6.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.5",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.11.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^15.15.0",
    "jsdom": "^28.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vitest-axe": "^0.1.0"
  }
}
